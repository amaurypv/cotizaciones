# Fase de Build
FROM node:20-slim AS build

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# Fase de Servidor
FROM nginx:alpine

# Copiar build del frontend
COPY --from=build /app/dist /usr/share/nginx/html

# Copiar configuraci√≥n de Nginx
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
